<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_500</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- night mode -->

    <style name="SCREEN">
        <item name="android:background">#000</item>
    </style>

    <!-- text background for night mode -->
    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- button color for night mode-->
    <style name="Button">
        <item name="android:background">@color/blue_500</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>