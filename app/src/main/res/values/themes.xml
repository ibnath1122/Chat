<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_200</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- light mode -->

    <style name="SCREEN">
        <item name="android:background">#FFF</item>
    </style>

    <!-- text background for light mode -->
    <style name="TEXT">
        <item name="android:textColor">#000</item>
    </style>

    <!-- button color for light mode-->
    <style name="Button">
        <item name="android:background">@color/blue_500</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="MyRatingBar" parent="Widget.AppCompat.RatingBar">
        <!-- non selected star color -->
        <item name="colorControlNormal">#4D000000</item>
        <!--  selected star color  -->
        <item name="colorControlActivated">@color/dialog_color_2</item>
    </style>

</resources>